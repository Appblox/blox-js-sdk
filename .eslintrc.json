{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "airbnb", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "prettier","header"],
  "rules": {
    "header/header": [6, "block", "* \n * Copyright (c)  Appblox. and its affiliates.\n*\n* This source code is licensed under the MIT license found in the\n* LICENSE file in the root directory of this source tree."],
    "react/jsx-props-no-spreading":"off",
    "jsx-a11y/click-events-have-key-events":"off",
    "jsx-a11y/no-static-element-interactions": "off",
    "jsx-a11y/label-has-associated-control":"off",
    "no-unused-expressions":"warn",
    "camelcase":"warn",
    "no-promise-executor-return":"off",
    "jsx-a11y/no-noninteractive-element-interactions": "off",
    "no-unused-vars": "warn",
    "no-console": "off",
    "react/jsx-filename-extension": "off",
    "semi": "off",
    "no-nested-ternary": "off",
    "linebreak-style": "off",
    "import/prefer-default-export":"off",
    "react/function-component-definition": [
      "error",
      {
        "namedComponents": "arrow-function",
        "unnamedComponents": "arrow-function",
      }
    ]
  }
}
